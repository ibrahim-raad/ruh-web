server {
  listen 80;

  root /usr/share/nginx/html;
  index index.html;

  # Serve static assets with long cache
  location /assets/ {
    try_files $uri =404;
    expires 1y;
    add_header Cache-Control "public, immutable";
  }

  # Serve the SPA
  location / {
    try_files $uri $uri/ /index.html;
  }
}

